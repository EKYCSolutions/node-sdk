{
  "compilerOptions": {
    "module": "es2022",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2022",
    "sourceMap": false,
    "lib": [
      "es2021"
    ]
  },
  "exclude": [
		"dist",
    "node_modules",
    "**/*.spec.ts"
  ],
  "include": ["packages/"]
}
